generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  id String @id @default(uuid())
  email String @unique
  username String
  password String
  confirmPassword String
  logins Passwords[]
  cards Cards[]
}

model Passwords{
  id String @id @default(uuid())
  userId String
  username String
  password String
  website String
  passwordCreator Users @relation(fields: [userId], references: [id])
}

model Cards{
  id String @id @default(uuid())
  userId String
  cardNumber Int
  cvv Int
  cardHolder String
  expiry String
  bank String
  cardCreator Users @relation(fields: [userId], references: [id])
}